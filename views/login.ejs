<link href="../css/style.css" rel="stylesheet">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"><img src="../image/website.png" alt=""></h1>
            <% include ./partials/messages %>
            <form action="/users/login" method="POST" style="text-align: center">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                            placeholder="Enter Email"
                    />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control"
                            placeholder="Enter Password"
                    />
                </div>
                <button type="submit" class="btn btn-primary btn-block mybtn"
                        style="letter-spacing: 6.9px; border-color: #20639B;">Login
                </button>
            </form>
            <p class="lead mt-4"><a href="/users/register" style="letter-spacing: 6.9px;">Register</a>
            </p>
        </div>
    </div>
</div>
