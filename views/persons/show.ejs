<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Person Show</title>
    <link href="../css/style.css" rel="stylesheet">
</head>
<body>

<header>
    <div style="text-align: center; margin-bottom: 40px;">
        <div style="display: inline-block;
    background: #101010;
    font-size: 42px;
    letter-spacing: 6.4px;
    padding: 0px 3px 2px 16px;
    margin-top: 20px;
    border-radius: 5px;"><a style="text-decoration: none;
    color: #fff;" href="">Information About Personnel</a></div>
    </div>
</header>
<div class="container">
    <table class="table">
        <thead class="text-center">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Position</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
        </tr>
        </thead>
        <tbody class="text-center">
        <td><%= person.name %></td>
        <td><%= person.surname %></td>
        <td><%= person.position %></td>
        <td><%= person.email %></td>
        <td><%= person.phone %></td>
        <td><%= person.address %></td>
        </tbody>
    </table>
    <% if (admin) { %>
        <div style="display: flex;
    justify-content: center;" >
            <a class="btn btn-primary " href="/persons/edit/<%= person._id %>" class="btn btn-primary"
               aria-current="page" style="background-color: #20639B;
    border-color: #20639B;">Edit</a>
            <form action="/persons/delete/<%= person._id %>" method="post">
                <button class="btn btn-primary" type="submit" style="background-color: #20639B;
    border-color: #20639B; margin: 0px 20px;">Delete</button>
            </form>
            <a href="/persons" class="btn btn-primary" style="background-color: #20639B;
    border-color: #20639B;">Back to list</a>
            <a href="/persons/create" class="btn btn-primary" style="background-color: #20639B;
               border-color: #20639B; margin-right: 20px; color: white; margin-left: 20px">Create Person</a>
        </div>
    <% } %>
</div>
</body>
</html>
